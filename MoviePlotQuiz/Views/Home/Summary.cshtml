<!-- (at)model(space) Namespace.Folder.ModelClass (no semicolon!) To refer, call (at)Model.FieldorMethod-->
@model MoviePlotQuiz.Models.Quiz
@{
    ViewBag.Title = "Summary";
}
<body style="background-color: silver; text-align: center">

    <h2>Summary of Quiz Results</h2>

    <label>Questions answered: @Model.QuestionNum | Right: @Model.AnswersCorrect | Wrong: @Model.AnswersWrong | Percent: @Model.Percent%</label>
    <br />
    <br />
    <form action="QuizStart" method="post" class="toNewQuiz">
        <input type="submit" value="Start New Quiz" />
    </form>
    <br />
    <br />
    <form action="Index" method="post" class="toHome">
        <input type="submit" value="Go to Home Page" />
    </form>

</body>





